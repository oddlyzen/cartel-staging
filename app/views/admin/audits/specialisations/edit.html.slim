.row
  .col-xs-12
  h2 Edit #{@specialisation.name}
  = simple_form_for @specialisation, url: { action: 'update' } do |f|
    = f.input :name, input_html: { value: f.object.name.titleize }
    = f.input :state, as: :select, collection: options_for_enum(Specialisation.states), prompt: 'Please Select'
    = f.button :submit
    = f.input :name_edit_date, as: :hidden, input_html: { value: Date.today }
    = link_to 'Back', admin_audits_specialisations_path, class: 'btn btn-default pull-right'
